<?xml version="1.0" encoding="UTF-8"?>
<odoo>


    <record id="view_move_form_rental_payment_email" model="ir.ui.view">
        <field name="name">account.move.form.rental.payment.email</field>
        <field name="model">account.move</field>
        <field name="inherit_id" ref="account.view_move_form"/>
        <field name="arch" type="xml">
            <xpath expr="//header" position="inside">
                <button name="action_send_rental_invoice_email"
                        type="object"
                        string="Envoyer facture (mail)"
                        class="oe_highlight"
                        attrs="{'invisible': ['|', ('move_type', '!=', 'out_invoice'), ('state', '!=', 'posted')]}"/>

                <button name="action_send_rental_payment_reminder_email"
                        type="object"
                        string="Envoyer rappel"
                        class="btn-secondary"
                        attrs="{'invisible': ['|', ('move_type', '!=', 'out_invoice'), ('payment_state', '=', 'paid')]}"/>
            </xpath>
        </field>
    </record>


    
    <record id="view_move_form_inherit_rental_payment" model="ir.ui.view">
        <field name="name">account.move.form.inherit.rental.payment</field>
        <field name="model">account.move</field>
        <field name="inherit_id" ref="account.view_move_form" />
        <field name="arch" type="xml">
            <xpath expr="//field[@name='invoice_line_ids']" position="after">
                <group string="Paiement en ligne"
                    attrs="{'invisible': [('move_type','!=','out_invoice')]}">

                    <field name="transaction_id" readonly="1" />
                    
                    <field name="payment_link" readonly="1" widget="url" />

                    <field name="payment_link_wave" readonly="1" widget="url" />

                    <field name="payment_link_orange_money" readonly="1" widget="url" />

                    <!-- Si tu gardes les liens avec le modèle Rental -->
                    <field name="rental_contract_id"
                        attrs="{'invisible': [('move_type','!=','out_invoice')]}" />

                    <field name="rental_property_id"
                        attrs="{'invisible': [('move_type','!=','out_invoice')]}" />
                </group>

                <group string="Generation Lien de paiement">
                    <button name="action_generate_payment_link"
                        string="Générer le lien de paiement"
                        type="object"
                        class="oe_highlight"
                        multi="False"
                    />

                    <button
                        name="send_payment_link_sms_with_details"
                        string="Envoyer le lien par SMS"
                        type="object"
                        class="oe_highlight"
                        attrs="{'invisible': [('payment_link','=',False)]}" />

                </group>
            </xpath>
            
            <!-- Ajouter un onglet pour l'historique des rappels -->
            <xpath expr="//sheet" position="inside">
                <group string="Rappels" 
                      attrs="{'invisible': [('move_type','!=','out_invoice')]}">
                    <button name="action_view_reminder_history"
                            type="object"
                            string="Historique des rappels"
                            class="oe_stat_button"
                            icon="fa-envelope"
                            attrs="{'invisible': [('reminder_history_count','=',0)]}"/>
                    <field name="reminder_history_count" widget="statinfo" string="Rappels envoyés"/>
                    <field name="last_reminder_date" readonly="1" string="Dernier rappel"/>
                </group>
            </xpath>
            
            <xpath expr="//notebook" position="inside">
                <page string="Historique des Rappels" 
                      attrs="{'invisible': [('move_type','!=','out_invoice')]}">
                    <field name="reminder_history_ids" nolabel="1" context="{'default_invoice_id': active_id}">
                        <tree decoration-success="status == 'sent'" 
                              decoration-danger="status == 'failed'" 
                              decoration-muted="status == 'pending'">
                            <field name="send_date"/>
                            <field name="reminder_type" widget="badge" 
                                   decoration-info="reminder_type == 'sms'" 
                                   decoration-primary="reminder_type == 'email'"/>
                            <field name="recipient"/>
                            <field name="status" widget="badge" 
                                   decoration-success="status == 'sent'" 
                                   decoration-danger="status == 'failed'" 
                                   decoration-warning="status == 'pending'"/>
                            <field name="is_automatic" widget="boolean_toggle"/>
                            <field name="error_message" attrs="{'invisible': [('status', '!=', 'failed')]}"/>
                        </tree>
                    </field>
                </page>
            </xpath>
        </field>
    </record>

    <record id="view_move_tree_inherit_rental_payment" model="ir.ui.view">
        <field name="name">account.move.tree.inherit.rental.payment</field>
        <field name="model">account.move</field>
        <field name="inherit_id" ref="account.view_move_tree" />
        <field name="arch" type="xml">
            <xpath expr="//tree" position="attributes">
                <attribute name="default_order">id desc</attribute>
            </xpath>
            <xpath expr="//field[@name='name']" position="after">
                <field name="payment_link" string="Lien de paiement" widget="url" />
            </xpath>
        </field>
    </record>

</odoo>